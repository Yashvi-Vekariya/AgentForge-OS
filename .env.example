# AgentForge-OS Environment Configuration
# Copy this file to .env and fill in your API keys

# Google Cloud API Key for Gemini Vision and Speech
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI API Key (if using OpenAI models)
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face API Token (for model downloads)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# MLflow Configuration
MLFLOW_TRACKING_URI=mlruns
MLFLOW_EXPERIMENT_NAME=multi-agent-system

# Database Configuration
DATABASE_URL=sqlite:///./data/app.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000

# Safety and Security
SAFETY_ENABLED=true
CORS_ORIGINS=*

# Vector Database
CHROMA_PATH=./data/chroma

# Model Paths
MODELS_PATH=./models
ADAPTERS_PATH=./models/adapters

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
